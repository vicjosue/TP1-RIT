        #define SSL_get_cipher_name(s) \
                       SSL_CIPHER_get_name(SSL_get_current_cipher(s))
        #define SSL_get_cipher_bits(s,np) \
                       SSL_CIPHER_get_bits(SSL_get_current_cipher(s),np)
