       ERR_GET_LIB, ERR_GET_FUNC, ERR_GET_REASON - get library,
       function and reason code

SSYYNNOOPPSSIISS
        #include <openssl/err.h>

        int ERR_GET_LIB(unsigned long e);

        int ERR_GET_FUNC(unsigned long e);

